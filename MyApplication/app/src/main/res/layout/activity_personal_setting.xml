<!--说明：设置页面的页面布局-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--返回键-->
    <Button
        android:id="@+id/Setting_Bt_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textSize="15sp"
        android:background="#00000000"/>

    <!--头像-->
    <RelativeLayout
        android:layout_marginTop="35dp"
        android:layout_marginBottom="1dp"
        android:padding="25dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/Setting_Iv_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/setting_avatar"
            android:layout_toLeftOf="@+id/Setting_Bt_avatarEdit"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"/>
        <Button
            android:id="@+id/Setting_Bt_avatarEdit"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@drawable/setting_btn_background"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <!--用户名-->
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:padding="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="爆破大队"
            android:layout_toLeftOf="@+id/Setting_Bt_UserNameEdit"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"/>
        <Button
            android:id="@+id/Setting_Bt_UserNameEdit"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@drawable/setting_btn_background"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <!--密码修改-->
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:padding="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码修改"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/Setting_Bt_UserPasswordEdit"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@drawable/setting_btn_background"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <!--性别选择-->
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:padding="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:layout_centerVertical="true"/>
        <Spinner
            android:id="@+id/Setting_Sp_Gender"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"></Spinner>
    </RelativeLayout>
</LinearLayout>