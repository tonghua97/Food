<?xml version="1.0" encoding="utf-8"?>
<!--注册页面布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.myapplication.RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:textSize="20dp"
        android:id="@+id/register_Tv_back"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="返回" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1.5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_Tv_name"
            android:text="食趣"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/register_Tv_name"
            android:text="随时-有趣"
            android:textColor="#aaaaaa"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <EditText
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:layout_gravity="center"
        android:hint="请输入用户名"
        android:background="@drawable/main_llay_default"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:hint="请输入密码"
        android:background="@drawable/main_llay_default"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:hint="请确认密码"
        android:background="@drawable/button_background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1.5">
        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/register_Btn_register"
            android:text="注册"
            android:textColor="#ffffff"
            android:background="@drawable/login_background"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册表示同意用户协议"
            android:textColor="#aaaaaa"/>
    </RelativeLayout>

</LinearLayout>
