<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--返回按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/Btn_material_back"
            android:background="@drawable/img_pickfun_back"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <!--食材分类选项-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--肉类-->
            <TextView
                android:id="@+id/Tv_searchmatrial_meattitle"
                android:text="肉类"
                android:textSize="25dp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:background="#FFED66"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <GridView
                android:id="@+id/Gv_material_meat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </GridView>
            <!--蔬菜类-->
            <TextView
                android:id="@+id/Tv_searchmatrial_vegetabletitle"
                android:text="蔬菜"
                android:textSize="25dp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:background="#FFED66"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <GridView
                android:id="@+id/Gv_material_vegetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </GridView>
            <!--调料类-->
            <TextView
                android:id="@+id/Tv_searchmatrial_flavourtitle"
                android:text="调料"
                android:textSize="25dp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:background="#FFED66"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <GridView
                android:id="@+id/Gv_material_flavour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </GridView>
        </LinearLayout>
    </ScrollView>
    <!--搜索按钮-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:text="搜索"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:background="#FF6A19"
            android:id="@+id/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">
        </Button>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/Button"
            android:layout_alignParentBottom="true">
        </TextView>
    </RelativeLayout>
</LinearLayout>