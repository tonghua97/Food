<?xml version="1.0" encoding="utf-8"?>
<!--分类列表ListView布局-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill_vertical">
        <ImageView
            android:id="@+id/Iv_classification"
            android:layout_width="160dp"
            android:layout_height="110dp"
            android:src="@drawable/img_loading"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/Tv_classification_name"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Iv_classification"
            android:text="食趣食趣"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <LinearLayout
            android:id="@+id/Ll_classification"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/Tv_classification_name"
            android:layout_toRightOf="@id/Iv_classification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/Iv_classification"
                android:layout_below="@id/Tv_classification_name"
                android:textColor="@color/black"
                android:text="用时："/>
            <TextView
                android:id="@+id/Tv_classification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Tv_classification_name"
                android:layout_toRightOf="@id/Iv_classification"
                android:textColor="@color/black"
                android:text="66"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="    "/>
            <TextView
                android:id="@+id/Tv_classification_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="666666"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="right"
                android:text="人收藏"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/Tv_classification_material"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Iv_classification"
            android:layout_below="@id/Ll_classification"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:text="食趣食趣食趣食趣食趣食趣食趣食趣食趣食趣食趣食趣食趣食趣食趣食趣"/>
    </RelativeLayout>
</RelativeLayout>