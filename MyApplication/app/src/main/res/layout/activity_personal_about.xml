<?xml version="1.0" encoding="utf-8"?>
<!--关于页面布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.administrator.myapplication.PersonalAboutActivity">

    <TextView
        android:layout_toLeftOf="@+id/Iv_concern_logo"
        android:id="@+id/Tv_concern_fanhui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="返回"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/Iv_concern_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/about_logo"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="食趣是一款集美食做法查询、菜谱分享与交流的应用。
        旨在打造标准化的菜谱市场，成为广大应用群众得以信赖和支持的菜谱应用。"
            android:ellipsize="marquee"/>

        <ListView
            android:id="@+id/Lv_about"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ListView>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本：v1.0.0"/>
    </RelativeLayout>
</LinearLayout>
