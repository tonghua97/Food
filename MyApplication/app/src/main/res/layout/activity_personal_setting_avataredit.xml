<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:background="@drawable/main_rlay_top">
        <!--返回键-->
        <Button
            android:id="@+id/AvatarEdit_Bt_Back"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:background="@drawable/setting_btn_back"/>
        <TextView
            android:layout_toRightOf="@+id/AvatarEdit_Bt_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:text="用户名修改"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/AvatarEdit_Bt_Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:background="#00000000"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingLeft="15dp">
        <EditText
            android:id="@+id/AvatarEdit_Et_Uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="爆破大队"
            android:textSize="20sp"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/AvatarEdit_btn_clear"
            android:layout_width="45dp"
            android:layout_height="38dp"
            android:background="@drawable/img_avataredit"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="小提示：用户名可包含字母、数字、下划线、中文"
            android:gravity="center"/>
    </RelativeLayout>
</LinearLayout>